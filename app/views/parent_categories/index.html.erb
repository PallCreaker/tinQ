<h1>Listing parent_categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parent_categories.each do |parent_category| %>
      <tr>
        <td><%= parent_category.name %></td>
        <td><%= link_to 'Show', parent_category %></td>
        <td><%= link_to 'Edit', edit_parent_category_path(parent_category) %></td>
        <td><%= link_to 'Destroy', parent_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Parent Category', new_parent_category_path %>
